<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RaceRunning"
        android:background="@drawable/carrera5">

    <View
            android:layout_width="184dp"
            android:layout_height="144dp"
            android:id="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/usernameTV"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:background="@drawable/carrera6" />

    <View
            android:layout_width="184dp"
            android:layout_height="144dp"
            android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/usernameTV"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/carrera6" />

    <TextView
            android:text="Player2"
            android:layout_width="136dp"
            android:layout_height="35dp"
            android:id="@+id/currentPlayer2TV"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:layout_constraintVertical_bias="0.069"
            app:layout_constraintHorizontal_bias="0.729" />

    <TextView
            android:text="Wins:"
            android:layout_width="106dp"
            android:layout_height="24dp"
            android:id="@+id/wins2TV"
            app:layout_constraintEnd_toEndOf="@+id/currentPlayer2TV"
            app:layout_constraintTop_toBottomOf="@+id/currentPlayer2TV" />

    <TextView
            android:text="Losses:"
            android:layout_width="106dp"
            android:layout_height="24dp"
            android:id="@+id/losses2TV"
            app:layout_constraintEnd_toEndOf="@+id/wins2TV"
            app:layout_constraintTop_toBottomOf="@+id/wins2TV" />

    <androidx.appcompat.widget.AppCompatButton
            android:text="Refresh"
            android:layout_width="126dp"
            android:layout_height="62dp"
            android:id="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="#D2971515"
            android:onClick="refreshBtnPressed"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintVertical_bias="0.761" />

    <TextView
            android:text="MyName"
            android:layout_width="344dp"
            android:layout_height="48dp"
            android:id="@+id/usernameTV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintVertical_bias="0.363"
            android:textSize="34sp"
            android:textAlignment="center"
            android:textColor="#000000" />

    <TextView
            android:text="Player1"
            android:layout_width="136dp"
            android:layout_height="35dp"
            android:id="@+id/currentPlayer1TV"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintVertical_bias="0.069"
            app:layout_constraintHorizontal_bias="0.791" />

    <TextView
            android:text="Losses:"
            android:layout_width="106dp"
            android:layout_height="24dp"
            android:id="@+id/losses1TV"
            app:layout_constraintStart_toStartOf="@+id/wins1TV"
            app:layout_constraintTop_toBottomOf="@+id/wins1TV" />

    <TextView
            android:text="Wins:"
            android:layout_width="106dp"
            android:layout_height="24dp"
            android:id="@+id/wins1TV"
            app:layout_constraintTop_toBottomOf="@+id/currentPlayer1TV"
            app:layout_constraintEnd_toEndOf="@+id/currentPlayer1TV" />

    <androidx.appcompat.widget.AppCompatButton
            android:text="Ready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/readyBtn"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button2"
            android:backgroundTint="#C8787878"
            android:onClick="ready" />

</androidx.constraintlayout.widget.ConstraintLayout>