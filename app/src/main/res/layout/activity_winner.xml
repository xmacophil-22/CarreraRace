<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Winner"
        android:background="@drawable/carrera7">

    <TextView
            android:text="Player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player2TV"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="260dp"
            android:layout_marginEnd="104dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.716" />

    <TextView
            android:text="Player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player1TV"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="264dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="171dp"
            android:layout_marginEnd="193dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="448dp" />

    <TextView
            android:text="Player3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player3TV"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.263"
            android:layout_marginBottom="172dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="540dp" />

    <androidx.appcompat.widget.AppCompatButton
            android:text="RESTART"
            android:layout_width="126dp"
            android:layout_height="62dp"
            android:id="@+id/button3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="#D2971515"
            android:onClick="back"
            app:layout_constraintTop_toBottomOf="@+id/player1TV"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintVertical_bias="0.831" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/carrera2"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="384dp" />

    <ImageView
            android:layout_width="291dp"
            android:layout_height="146dp"
            app:srcCompat="@drawable/carrera8"
            android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>